VERSION 1.0 CLASS
BEGIN
  MultiUse = -1  'True
  Persistable = 0  'NotPersistable
  DataBindingBehavior = 0  'vbNone
  DataSourceBehavior  = 0  'vbNone
  MTSTransactionMode  = 0  'NotAnMTSObject
END
Attribute VB_Name = "clsCarters"
Attribute VB_GlobalNameSpace = False
Attribute VB_Creatable = False
Attribute VB_PredeclaredId = False
Attribute VB_Exposed = False
Option Explicit

Public ObjCartera As Object
Public coleccion As New Collection
 
Public Sub VaciarColeccion()

   Dim Filas&, Max&

   Max& = coleccion.Count

   For Filas& = 1 To Max&
      coleccion.Remove 1

   Next Filas&

End Sub

'Consulta cartera ordenados alfabeticamente y llena una colección
Public Function LeerCartera(cartera As String) As Boolean

   Dim Sql           As String
   Dim IdRow         As Integer
   Dim objBuffer     As Object
   Dim DATOS()

   LeerCartera = False
   Envia = Array()
   AddParam Envia, cartera

   If Not Bac_Sql_Execute("SP_CRLEERNOMBRES1", Envia) Then
      Exit Function

   End If

   Call VaciarColeccion

   Do While Bac_SQL_Fetch(DATOS())
   

      Set objBuffer = New clsCarter

      With objBuffer
         .rut = Val(DATOS(1))
         .dig = DATOS(2)
         .nombre = DATOS(3)

      End With

      coleccion.Add objBuffer
      Set objBuffer = Nothing

    Loop

    LeerCartera = True

End Function

Private Sub Class_Initialize()

   'Set ObjCartera = New Clscartera

End Sub

Private Sub Class_Terminate()

   Set ObjCartera = Nothing

End Sub

