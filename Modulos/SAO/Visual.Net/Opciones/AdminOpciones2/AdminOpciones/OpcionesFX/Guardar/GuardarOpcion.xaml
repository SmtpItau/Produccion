            <TextBlock Height="15" HorizontalAlignment="Right" Margin="0,0,12.5,147" VerticalAlignment="Bottom" Width="65" Text="N° Bien" TextWrapping="Wrap" x:Name="TextBlockBien"/-->

        </Grid>
