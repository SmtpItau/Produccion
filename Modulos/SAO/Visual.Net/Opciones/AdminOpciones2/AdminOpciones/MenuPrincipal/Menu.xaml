                <TextBlock x:Name="ServerName"
                           Height="16"
                           Width="99.514"
                           TextWrapping="Wrap"
                           Canvas.Left="555"
                           Canvas.Top="39"
                           Text="---"/>
            </Canvas>
        </Canvas>
    </Grid>
</UserControl>   