                                                      IsExpanded="False">
                                        <controls:TreeViewItem x:Name="AdmOpc0040401"
                                                          Header="Voucher Contables"
                                                          IsEnabled="False"/>
                                        <controls:TreeViewItem x:Name="AdmOpc0040402"
                                                          Header="Movimientos por Cta."
