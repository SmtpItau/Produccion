                    <Grid.RowDefinitions>
                        <RowDefinition Height="32" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    
                    <StackPanel x:Name="dockPanel"
                                Margin="0,0,-574,145"
                                Orientation="Vertical"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Bottom"
